{
    "name": "spectra/spectra-child",
    "description": "Spectra Child Theme with Carbon Fields",
    "type": "wordpress-theme",
    "require": {
        "php": ">=7.4",
        "htmlburger/carbon-fields-plugin": "^3.6"
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
